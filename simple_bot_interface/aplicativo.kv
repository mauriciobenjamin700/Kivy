#:kivy 1.0.9

<Gerenciador>:
    Menu:
        name: 'menu'
    Bot:

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20
        Image: 
            source: 'bot.png'
            size_hint_y: None
            height: 300
            allow_stretch: True
        Button:
            text: 'Bot'
            on_release: app.root.current = 'bot'
        Button:
            text: 'Configurações do bot'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Bot>:
    BoxLayout:
        name: 'bot'
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Button:
            text: 'Voltar'
            size_hint_y: None
            height: 40
            size_hint_x: None
            width: 50
            on_release: app.root.current = 'menu'


